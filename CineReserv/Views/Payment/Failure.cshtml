@{
    ViewData["Title"] = "Paiement échoué - CineReserv";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card text-center">
                <div class="card-body">
                    <h2 class="text-danger mb-3">Paiement échoué</h2>
                    <p class="mb-4">
                        Votre paiement n'a pas pu être traité. Aucune réservation n'a été effectuée.
                    </p>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-4">
                            <strong>Détails de l'erreur :</strong><br>
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <div class="alert alert-warning mb-4">
                        <strong>Raisons possibles :</strong><br>
                        • Carte de crédit refusée<br>
                        • Informations de carte incorrectes<br>
                        • Solde insuffisant<br>
                        • Problème temporaire avec votre banque
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-controller="Payment" asp-action="Index" class="btn btn-primary btn-lg">
                            Réessayer le paiement
                        </a>
                        <a asp-controller="Panier" asp-action="Index" class="btn btn-outline-secondary">
                            Retour au panier
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            Retour à l'accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
