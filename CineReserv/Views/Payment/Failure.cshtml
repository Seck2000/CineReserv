@{
    ViewData["Title"] = "Paiement échoué - CineReserv";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card text-center">
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="card-title text-danger mb-3">❌ Paiement échoué</h1>
                    <p class="card-text lead mb-4">
                        Votre paiement n'a pas pu être traité. Aucune réservation n'a été effectuée.
                    </p>
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Raisons possibles :</strong><br>
                        • Carte de crédit refusée<br>
                        • Informations de carte incorrectes<br>
                        • Solde insuffisant<br>
                        • Problème temporaire avec votre banque
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-controller="Payment" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-credit-card"></i> Réessayer le paiement
                        </a>
                        <a asp-controller="Panier" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-shopping-cart"></i> Retour au panier
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-home"></i> Retour à l'accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border: none;
    }
    
    .text-danger {
        color: #dc3545 !important;
    }
</style>

