@model IEnumerable<CineReserv.Models.Film>

@{
    ViewData["Title"] = "Gestion des Films";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>ðŸŽ¬ Gestion des Films</h1>
        <a asp-action="CreateFilm" class="btn btn-success">
            <i class="fas fa-plus"></i> Ajouter un film
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @foreach (var film in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@film.ImageUrl" class="card-img-top" alt="@film.Titre" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@film.Titre</h5>
                        <p class="card-text">
                            <span class="badge bg-primary me-2">@film.Genre</span>
                            <span class="badge bg-secondary me-2">@film.Classification</span>
                            <span class="badge bg-info">@film.Duree min</span>
                        </p>
                        <p class="card-text text-muted small">@film.Description</p>
                        <div class="mt-auto">
                            <div class="d-flex gap-2">
                                <a asp-action="EditFilm" asp-route-id="@film.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <a asp-action="DeleteFilm" asp-route-id="@film.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Supprimer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>Aucun film trouvÃ©</h4>
            <p>Commencez par ajouter votre premier film.</p>
            <a asp-action="CreateFilm" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter un film
            </a>
        </div>
    }
</div>


