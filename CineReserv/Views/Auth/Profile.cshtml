@model CineReserv.Models.ApplicationUser

@{
    ViewData["Title"] = "Mon Profil";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">üë§ Bonjour, @Model.Prenom @Model.Nom</h2>
                    <a asp-action="EditProfile" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Informations personnelles</h5>
                            <p><strong>Nom :</strong> @Model.Nom</p>
                            <p><strong>Pr√©nom :</strong> @Model.Prenom</p>
                            <p><strong>Email :</strong> @Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Type de compte</h5>
                            <p><strong>Type d'utilisateur :</strong> @Model.TypeUtilisateur</p>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Statut du compte</h5>
                            <span class="badge @(Model.TypeUtilisateur == "Client" ? "bg-primary" : "bg-success") fs-6">
                                @(Model.TypeUtilisateur == "Client" ? "üë§ Client" : "üè¢ Fournisseur")
                            </span>
                            <p class="mt-2"><strong>Membre depuis :</strong> @Model.DateInscription.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Actions rapides</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.TypeUtilisateur == "Client")
                        {
                            <a asp-controller="Films" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-film"></i> Voir les films
                            </a>
                            <a asp-controller="Panier" asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-shopping-cart"></i> Mon panier
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-success">
                                <i class="fas fa-chart-bar"></i> Tableau de bord
                            </a>
                            <a asp-controller="Facturation" asp-action="Index" class="btn btn-outline-success">
                                <i class="fas fa-file-invoice-dollar"></i> Facturation
                            </a>
                        }
                        <a asp-action="EditProfile" class="btn btn-outline-secondary">
                            <i class="fas fa-edit"></i> Modifier mon profil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
