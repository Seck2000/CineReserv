@model CineReserv.Models.Film

@{
    ViewData["Title"] = Model.Titre;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Titre" style="height: 180px; object-fit: cover;">
                        </div>
                        <div class="col-md-6">
                            <h4 class="mb-1">@Model.Titre</h4>
                            <div class="mb-2">
                                <span class="badge bg-secondary me-2">@Model.Classification</span>
                                <span class="text-muted me-2">@Model.Duree min</span>
                                <span class="text-muted">@Model.Genre</span>
                            </div>
                            <p class="text-muted mb-2"><strong>Description :</strong> @Model.Description</p>
                            @if (!string.IsNullOrEmpty(Model.BandeAnnonceUrl))
                            {
                                <a class="link-primary" href="@Model.BandeAnnonceUrl" target="_blank">Voir la bande‑annonce</a>
                            }
                        </div>
                        <div class="col-md-4">
                            @if (Model.Seances != null && Model.Seances.Any(s => s.DateHeure > DateTime.Now && s.EstActive))
                            {
                                <div class="fw-semibold text-uppercase small text-muted mb-2">Séances disponibles</div>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var seance in Model.Seances.Where(s => s.EstActive && s.DateHeure > DateTime.Now).OrderBy(s => s.DateHeure).Take(6))
                                    {
                                        @if (ViewBag.IsSupplier == true)
                                        {
                                            <span class="btn btn-outline-secondary rounded-pill px-3" disabled>
                                                @seance.DateHeure.ToString("HH 'h' mm")
                                            </span>
                                        }
                                        else
                                        {
                                            <a asp-action="SelectionBillets" asp-route-seanceId="@seance.Id" class="btn btn-outline-primary rounded-pill px-3">
                                                @seance.DateHeure.ToString("HH 'h' mm")
                                            </a>
                                        }
                                    }
                                </div>
                                @if (Model.Seances.Count(s => s.EstActive && s.DateHeure > DateTime.Now) > 6)
                                {
                                    <p class="text-muted small mt-2 mb-0">
                                        + @(Model.Seances.Count(s => s.EstActive && s.DateHeure > DateTime.Now) - 6) autre(s) séance(s)
                                    </p>
                                }
                            }
                            else
                            {
                                <div class="text-muted small">
                                    <i class="fas fa-info-circle"></i> Aucune séance prochaine
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        @if (!string.IsNullOrEmpty((string)ViewBag.ReturnUrl))
        {
            <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        }
        else
        {
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        }
    </div>
</div>
