@model IEnumerable<CineReserv.Models.Film>

@{
    ViewData["Title"] = "Films √† l'affiche";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">üé¨ Films √† l'affiche</h1>
            <p class="text-muted mb-4">D√©couvrez les films actuellement projet√©s dans nos salles</p>
            
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <h3>Aucun film √† l'affiche actuellement</h3>
                    <p class="text-muted">Il n'y a pas de s√©ances programm√©es pour le moment. Revenez bient√¥t !</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-home"></i> Retour √† l'accueil
                    </a>
                </div>
            }
            else
            {
                @foreach (var film in Model)
                {
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <img src="@film.ImageUrl" class="img-fluid rounded" alt="@film.Titre" style="height: 180px; object-fit: cover;">
                                </div>
                                <div class="col-md-6">
                                    <h4 class="mb-1">@film.Titre</h4>
                                    <div class="mb-2">
                                        <span class="badge bg-secondary me-2">@film.Classification</span>
                                        <span class="text-muted me-2">@film.Duree min</span>
                                        <span class="text-muted">@film.Genre</span>
                                    </div>
                                    <p class="text-muted mb-2"><strong>Description :</strong> @(film.Description.Length > 140 ? film.Description.Substring(0, 140) + "..." : film.Description)</p>
                                    @if (!string.IsNullOrEmpty(film.BandeAnnonceUrl))
                                    {
                                        <a class="link-primary" href="@film.BandeAnnonceUrl" target="_blank">Voir la bande‚Äëannonce</a>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <div class="fw-semibold text-uppercase small text-muted mb-2">Regular</div>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var seance in film.Seances.Where(s => s.EstActive && s.DateHeure > DateTime.Now).OrderBy(s => s.DateHeure).Take(3))
                                        {
                                            @if (ViewBag.IsSupplier == true)
                                            {
                                                <span class="btn btn-outline-secondary rounded-pill px-3" style="cursor: default; opacity: 0.6;" disabled>
                                                    @seance.DateHeure.ToString("HH 'h' mm")
                                                </span>
                                            }
                                            else
                                            {
                                                <a asp-action="SelectionBillets" asp-route-seanceId="@seance.Id" class="btn btn-outline-primary rounded-pill px-3">
                                                    @seance.DateHeure.ToString("HH 'h' mm")
                                                </a>
                                            }
                                        }
                                        @if (!(film.Seances?.Any(s => s.EstActive && s.DateHeure > DateTime.Now) ?? false))
                                        {
                                            <span class="text-muted small">Aucune s√©ance prochaine</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
<style>
    .film-card { transition: transform 0.2s ease; }
    .film-card:hover { transform: translateY(-3px); }
    .card-img-top { object-fit: cover; }
    .btn.rounded-pill { border-radius: 999px !important; }
</style>
</div>
