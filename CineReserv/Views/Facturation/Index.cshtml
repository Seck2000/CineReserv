@model IEnumerable<CineReserv.Models.Invoice>

@{
    ViewData["Title"] = "Gestion des Factures";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üí∞ Gestion des Factures</h1>
        <a asp-action="Statistiques" class="btn btn-info">
            <i class="fas fa-chart-bar"></i> Statistiques
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @foreach (var facture in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Facture #@facture.NumeroFacture</h5>
                        <p class="card-text">
                            <strong>Client:</strong> @facture.NomClient<br>
                            <strong>Film:</strong> @facture.Reservation.Seance.Film.Titre<br>
                            <strong>Date:</strong> @facture.DateFacture.ToString("dd/MM/yyyy")<br>
                            <strong>Montant:</strong> @facture.Montant.ToString("C")<br>
                            <strong>Statut:</strong> 
                            @if (facture.Statut == "Pay√©e")
                            {
                                <span class="badge bg-success">@facture.Statut</span>
                            }
                            else if (facture.Statut == "En attente")
                            {
                                <span class="badge bg-warning">@facture.Statut</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@facture.Statut</span>
                            }
                        </p>
                        <div class="mt-auto">
                            <div class="d-flex gap-2">
                                @if (facture.Id > 0)
                                {
                                    <a asp-action="Details" asp-route-id="@facture.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> D√©tails
                                    </a>
                                    <a asp-action="PDF" asp-route-id="@facture.Id" class="btn btn-outline-success btn-sm" target="_blank">
                                        <i class="fas fa-file-pdf"></i> PDF
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted small">(Aper√ßu non persist√©)</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>Aucune facture trouv√©e</h4>
            <p>Les factures appara√Ætront ici apr√®s les paiements.</p>
        </div>
    }
</div>


