@model CineReserv.Models.Invoice

@{
    ViewData["Title"] = "D√©tails de la Facture";
}

<div class="container mt-4">
    <h1>üí∞ D√©tails de la Facture #@Model.NumeroFacture</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Informations de la facture</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Informations g√©n√©rales</h6>
                            <p><strong>Num√©ro:</strong> @Model.NumeroFacture</p>
                            <p><strong>Date:</strong> @Model.DateFacture.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Statut:</strong> 
                                @if (Model.Statut == "Pay√©e")
                                {
                                    <span class="badge bg-success">@Model.Statut</span>
                                }
                                else if (Model.Statut == "En attente")
                                {
                                    <span class="badge bg-warning">@Model.Statut</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@Model.Statut</span>
                                }
                            </p>
                            <p><strong>Montant:</strong> <span class="h5 text-primary">@Model.Montant.ToString("C")</span></p>
                        </div>
                        <div class="col-md-6">
                            <h6>Informations de paiement</h6>
                            @if (!string.IsNullOrEmpty(Model.PaymentIntentId))
                            {
                                <p><strong>ID Stripe:</strong> @Model.PaymentIntentId</p>
                            }
                            <p><strong>Date de paiement:</strong> @Model.DateFacture.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5>D√©tails de la r√©servation</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Film et s√©ance</h6>
                            <p><strong>Film:</strong> @Model.Reservation.Seance.Film.Titre</p>
                            <p><strong>Date/Heure:</strong> @Model.Reservation.Seance.DateHeure.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Salle:</strong> @Model.Reservation.Seance.Salle.Nom</p>
                            <p><strong>Places:</strong> @Model.Reservation.NombrePlaces</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Prix</h6>
                            <p><strong>Prix unitaire:</strong> @Model.Reservation.PrixUnitaire.ToString("C")</p>
                            <p><strong>Total:</strong> <span class="h5 text-primary">@Model.Montant.ToString("C")</span></p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5>Informations client</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Nom:</strong> @Model.NomClient</p>
                            <p><strong>Email:</strong> @Model.EmailClient</p>
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.AdresseClient))
                            {
                                <p><strong>Adresse:</strong> @Model.AdresseClient</p>
                                <p><strong>Code postal:</strong> @Model.CodePostalClient</p>
                                <p><strong>Ville:</strong> @Model.VilleClient</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="PDF" asp-route-id="@Model.Id" class="btn btn-success" target="_blank">
                            <i class="fas fa-file-pdf"></i> T√©l√©charger PDF
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour √† la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


